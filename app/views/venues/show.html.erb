<% content_for :title, "Backcourt Dribble Admin: Update #{@venue.name}" %>


<%=render "shared/site_nav"%>

<div class="container">
  <h1 class="show-title">Update or Delete <span><%=@venue.name%></span></h1>

  <!-- Update -->
  <div class="row justify-content-center">
    <div class="col-xs-12 align-items-center">
      <div class="show-container">
        <%= form_for @venue do |f| %>
          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control form-control-lg", value: @venue.name%>
          </div>
          <div class="form-group">
            <%= f.label "Image" %>
            <%= f.text_field :picture_url, class: "form-control form-control-lg", value: @venue.picture_url%>
          </div>
          <div class="form-group">
            <%= f.label "Address" %>
            <%= f.text_field :address, class: "form-control form-control-lg", value: @venue.address%>
          </div>

          <div class="form-group">
            <%= f.label "Time Zone" %>
            <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, include_blank: true, class: "form-control form-control-lg", value: @venue.time_zone%>
          </div>
          <%= f.submit "Update #{@venue.name}", class: "btn btn-primary btn-lg show-button"%>
        <% end %>


      <!-- Delete  -->
        <%= form_for @venue, :method => :delete do |f|  %>
          <%= submit_tag "Delete #{@venue.name}", class: "btn btn-primary btn-lg show-button delete" %>
        <% end %>

        <%= link_to 'Previous', @venues.next(@venue), class: "btn btn-lg btn-primary" %>
        <%= link_to 'Next', @venues.previous(@venue), class: "btn btn-lg btn-primary" %>
        <%= link_to 'Back To Admin', admin_index_path, class: "btn btn-lg btn-primary" %>

      </div>

      </div>

  </div>

</div>
