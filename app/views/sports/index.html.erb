<%= render "shared/site_nav" %>

<div class="container-fluid">

  <% if @sport.leagues.length > 0 %>
    <h1><%=@sport.name%></h1>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h4> Available to Engage with now on Backcourt Dribble </h4>
      <% @sport.leagues.each do |league| %>
        <div>
          <% if league.matches.length > 0 %>
            <%= link_to "#{league.name}", league_matches_path(league) %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
      <ul>
        <h4> Worlwide Leagues </h4>
        <% @sport.leagues.each do |league| %>
          <li>  <%= league.name %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
