<% content_for :title, "Backcourt Dribble: Tweets for Soccer, Football, Basketball, Rugby, Tennis, Softball, Volleyball, Ice Hockey" %>

<body class="big-black">
  <div class="container-fluid tweet-container">
    <!-- Main row -->
    <div class="row justify-content-center">

      <!-- Column for keywords -->
      <div class="col-xs-12 co-md-4">
        <div class="keywords-container">
          <div>
            <a class="wall-logo" href="/"><%= image_tag "logos/blue_transparent_logo_whletters.png"%></a>
          </div>
          <div class="keyword" id="WoSo">
            <%= link_to 'WOSO', tweets_path(:keyword => "woso") %>
          </div>
          <div class="keyword" id="USWNT">
            <%= link_to 'USWNT', tweets_path(:keyword => "USWNT") %>
          </div>
          <div class="keyword" id="NWSL">
            <%= link_to 'NWSL', tweets_path(:keyword => "NWSL") %>
          </div>
          <div class="keyword" id="nofinishline">
            <%= link_to 'NoFinishLine', tweets_path(:keyword => "nofinishline") %>
          </div>
          <div class="keyword" id="TH3HUNT">
            <%= link_to 'TH3HUNT', tweets_path(:keyword => "TH3HUNT") %>
          </div>
          <div class="keyword" id="CourageCountry">
            <%= link_to 'CourageCountry', tweets_path(:keyword => "CourageCountry") %>
          </div>
          <div class="keyword" id="PORvNC">
            <%= link_to 'PORvNC', tweets_path(:keyword => "PORvNC") %>
          </div>
          <div class="keyword" id="BAONPDX">
            <%= link_to 'BAONPDX', tweets_path(:keyword => "BAONPDX") %>
          </div>
          <div class="keyword" id="NWSLChampionship">
            <%= link_to 'NWSLChampionship', tweets_path(:keyword => "NWSLChampionship") %>
          </div>
          <div class="keyword" id="NWL">
            <%= link_to 'NWL', tweets_path(:keyword => "NWL") %>
          </div>
          <div class="keyword" id="FAWSL">
            <%= link_to 'FAWSL', tweets_path(:keyword => "FAWSL") %>
          </div>
          <div class="keyword" id="DFBPokalFrauen">
            <%= link_to 'DFBPokalFrauen', tweets_path(:keyword => "DFBPokalFrauen") %>
          </div>
          <div class="keyword" id="ContiCup">
            <%= link_to 'ContiCup', tweets_path(:keyword => "ContiCup") %>
          </div>
          <div class="keyword" id="UWCL">
            <%= link_to 'UWCL', tweets_path(:keyword => "UWCL") %>
          </div>
        </div> <!-- End keywords-container -->
      </div> <!-- End col for keywords -->

      <!-- Column for tweets -->
      <div class="col-xs-12 col-md-8 tweets-wall">
        <% @tweets.each do |t|%>
          <div class="keyword-tweet">
            <div class="tweet-wrapper">
              <div class="timestamp"><%= "#{t["created_at"]}" %></div>
              <div class="tweet-text"><%= "#{t["full_text"]}" %></div>
              <div class="by-line"> <%= "#{t.dig("user","screen_name")} in #{t.dig("user","location")}" %> </div>
            </div>
          </div>
        <% end %>
      </div> <!-- End column for tweets -->

    </div> <!-- End main row -->

  </div>
</body>
