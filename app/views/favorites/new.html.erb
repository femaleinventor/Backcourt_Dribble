<body class="bg-white">
  <div class="container favorites-selection">
    <header>
      <!-- <h1 class="favorites-heading text-center">Help us get to know you</h1> -->
      <h1 class="favorites-heading text-center">Own your experience.</h1>
      <h2 class="favorites-subheading text-center"> Favorite teams or players to receive updates on upcoming matches </h2>
    </header>

    <main>
      <section class="all-sports">
        <div class="container">
          <div class="row justify-content-center">
            <%@sports.each do |sport|%>
              <div class="col-xs-12 col-sm-4 d-flex justify-content-center">
                <div class="sport-card mt-4 d-flex align-items-center justify-content-center">
                  <div class="sport-card-image d-flex align-items-center justify-content-center">
                    <h1 class="sport-card-title text-center"><%=sport.name%></h1>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </section>
      <section class="favorites-nav">
        <div class="container">
          <div class="row justify-content-center mt-2 mb-4">
            <div class="col-xs-12">
              <%=link_to "Skip", root_path, class: "text-center"%>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</body>
